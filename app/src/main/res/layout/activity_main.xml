<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="64dp"
            tools:layout_editor_absoluteX="8dp" android:padding="4dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="56dp" tools:layout_editor_absoluteY="0dp"
                android:layout_width="match_parent"
        >
            <EditText
                    android:text="4.2.2.2"
                    android:ems="10"
                    android:id="@+id/addressText" android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="120" android:layout_gravity="bottom|top|left"/>

            <Button
                    android:text="PING"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/startPingButton"
                    android:layout_weight="10"
                    android:layout_gravity="bottom|right|top"/>


        </LinearLayout>
        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/consoleTextView"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawHorizontalTrack="false" android:scrollbarAlwaysDrawVerticalTrack="true"
                tools:layout_editor_absoluteX="8dp" tools:layout_editor_absoluteY="160dp" android:gravity="bottom"
                android:fontFamily="monospace" android:textSize="18sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>